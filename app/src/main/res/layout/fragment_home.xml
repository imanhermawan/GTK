<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->

    <android.support.v7.widget.CardView
        style="@style/CardStyle.Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_server1"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 1" />

            <Button
                android:id="@+id/btn_server2"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 2" />

            <Button
                android:id="@+id/btn_server3"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 3" />

            <Button
                android:id="@+id/btn_server4"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 4" />

            <Button
                android:id="@+id/btn_server5"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 5" />

            <Button
                android:id="@+id/btn_server6"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 6" />

            <Button
                android:id="@+id/btn_server7"
                style="@style/ButtonStyle.Colored.NoRaise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_check_circle"
                android:text="Server 7" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- </FrameLayout>-->
</RelativeLayout>